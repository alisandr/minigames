<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:id="@+id/fod_game_tablo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" android:textSize="30dp"/>
    <TextView
            android:id="@+id/fod_avaiable_life"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    <TextView
            android:id="@+id/fod_avaiable_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    <TextView
            android:id="@+id/fod_avaiable_total_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    <TextView
            android:id="@+id/fod_word_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"/>
    <EditText
            android:id="@+id/fod_word_input_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"/>

    <Button android:id="@+id/fod_confim_button_make_baraban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fod_button_open_word_make_baraban"/>

    <Button
            android:id="@+id/fod_confim_letter_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fod_button_letter_review"
            android:enabled="false"/>

    <Button
            android:id="@+id/fod_confim_button_openword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fod_button_open_word"
            android:enabled="false"/>
</LinearLayout>